<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_Address"
    android:background="@color/background_color">

    <EditText
        android:id="@+id/address_city"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/primary_color"
        android:drawableStart="@drawable/baseline_location_on_24"
        android:drawablePadding="10dp"
        android:drawableTint="@color/primary_color"
        android:ems="10"
        android:hint="Tỉnh/Thành phố"
        android:inputType="textPersonName"
        android:singleLine="false"
        android:textColor="@color/text_color"
        android:textColorHighlight="@color/primary_color"
        android:textColorHint="@color/text_color"
        android:textCursorDrawable="@android:drawable/dark_header"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:layout_constraintVertical_bias="0.765" />

    <EditText
        android:id="@+id/address_distric"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/primary_color"
        android:drawableStart="@drawable/baseline_location_on_24"
        android:drawablePadding="10dp"
        android:drawableTint="@color/primary_color"
        android:ems="10"
        android:hint="Quận/Huyện"
        android:inputType="textPersonName"
        android:singleLine="false"
        android:textColor="@color/text_color"
        android:textColorHighlight="@color/primary_color"
        android:textColorHint="@color/text_color"
        android:textCursorDrawable="@android:drawable/dark_header"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:layout_constraintVertical_bias="0.6" />

    <EditText
        android:id="@+id/address_detail"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/primary_color"
        android:drawableStart="@drawable/baseline_location_on_24"
        android:drawablePadding="10dp"
        android:drawableTint="@color/primary_color"
        android:ems="10"
        android:hint="Số nhà, xã/phường"
        android:inputType="textPersonName"
        android:singleLine="false"
        android:textColor="@color/text_color"
        android:textColorHighlight="@color/primary_color"
        android:textColorHint="@color/text_color"
        android:textCursorDrawable="@android:drawable/dark_header"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:layout_constraintVertical_bias="0.416" />

    <EditText
        android:id="@+id/address_phone"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/primary_color"
        android:drawableStart="@drawable/phone_icon"
        android:drawablePadding="10dp"
        android:drawableTint="@color/primary_color"
        android:ems="10"
        android:hint="Số điện thoại"
        android:inputType="textPersonName"
        android:singleLine="false"
        android:textColor="@color/text_color"
        android:textColorHighlight="@color/primary_color"
        android:textColorHint="@color/text_color"
        android:textCursorDrawable="@android:drawable/dark_header"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:layout_constraintVertical_bias="0.241" />

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.426"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Thêm mới địa chỉ"
        android:textColor="#4D4D4D"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.356"
        app:layout_constraintStart_toEndOf="@+id/btn_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#D8D8D8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.141" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="59dp"
        android:layout_height="21dp"
        android:gravity="center"
        android:text="Địa chỉ:"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintVertical_bias="0.099" />

    <EditText
        android:id="@+id/address_name"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/primary_color"
        android:cursorVisible="true"
        android:drawableStart="@drawable/outline_person_24"
        android:drawablePadding="10dp"
        android:drawableTint="@color/primary_color"
        android:ems="10"
        android:filterTouchesWhenObscured="false"
        android:hint="Tên người nhận"
        android:inputType="textPersonName"
        android:singleLine="false"
        android:textColor="@color/text_color"
        android:textColorHighlight="@color/primary_color"
        android:textColorHint="@color/text_color"
        android:textCursorDrawable="@android:drawable/dark_header"
        android:textSelectHandle="@color/primary_color"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:layout_constraintVertical_bias="0.083" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="214dp"
        android:layout_height="121dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.728"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintVertical_bias="0.019">

        <RadioButton
            android:id="@+id/radio_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/primary_color"
            android:checked="true"
            android:drawableStart="@drawable/home_mini"
            android:gravity="center"
            android:text="Nhà riêng"
            android:textAlignment="center"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radio_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/primary_color"
            android:drawableStart="@drawable/work_placemini"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:text="Nơi làm việc"
            android:textAlignment="center"
            android:textStyle="bold" />
    </RadioGroup>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address_city"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_add_newaddress"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primary_color"
        android:text="Thêm mới"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/bottomAppBar2"
        app:layout_constraintEnd_toEndOf="@+id/bottomAppBar2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bottomAppBar2" />

</androidx.constraintlayout.widget.ConstraintLayout>