<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="32dp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/logo"
                android:layout_marginRight="5dp"
                app:tint="@color/orange_700" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Labary"
                android:fontFamily="@font/public_sans_semi_bold"
                android:textSize="25sp"
                android:textColor="@color/primary_text"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/public_sans_regular"
            android:text="Đăng nhập để tiếp tục!"
            android:textSize="15sp"
            android:textColor="@color/secondary_text"
            android:layout_marginBottom="24dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:layout_marginBottom="24dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Email"
                android:fontFamily="@font/public_sans_semi_bold"
                android:textSize="15sp"
                android:layout_marginBottom="8dp"
                />
            <EditText
                android:id="@+id/editText_emailLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="admin@gmail.com"
                android:inputType="textEmailAddress"
                android:textSize="15sp"
                android:fontFamily="@font/public_sans_regular"
                android:drawableLeft="@drawable/ic_user_2_line"
                android:drawablePadding="10dp"
                />
            <TextView
                android:id="@+id/textView_errEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red_text"
                android:textStyle="italic"
                android:layout_marginStart="10dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/public_sans_semi_bold"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:text="Mật khẩu"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/textView_forgotPw"
                    android:fontFamily="@font/public_sans_regular"
                    android:text="Quên mật khẩu?"
                    android:textSize="13sp" />
            </RelativeLayout>
            <EditText
                android:id="@+id/editText_passwordLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="*********"
                android:fontFamily="@font/public_sans_regular"
                android:textSize="15sp"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/ic_lock_2_line"
                android:drawablePadding="10dp"/>
            <TextView
                android:id="@+id/textView_errPw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red_text"
                android:textStyle="italic"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:id="@+id/checkbox_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/public_sans_medium"
                android:textColor="@color/primary_text"
                android:textSize="15sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:padding="0dp"/>


            <Button
                android:id="@+id/btnSignin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đăng nhập"
                android:backgroundTint="@color/orange_700"
                android:background="@drawable/custom_button"
                android:fontFamily="@font/public_sans_medium"
                android:textSize="15dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>