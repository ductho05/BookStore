<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:bottomRightRadius="8dp" android:bottomLeftRadius="8dp"/>
            <solid android:color="#ffffff"/>
            <stroke android:width="0.5dp" android:color="#000000"/> <!-- Thêm viền màu đen với độ rộng 2dp -->
            <padding android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp"/> <!-- Thêm padding để tránh viền bị cắt khi đổ bóng -->
            <corners android:radius="8dp"/> <!-- Thêm radius cho góc -->
        </shape>
    </item>
</selector>
